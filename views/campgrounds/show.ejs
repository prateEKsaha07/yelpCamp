<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card" >
            <img src="<%= camp.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= camp.title %></h5>
              <p class="card-text"><%= camp.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= camp.location %></li>
              <li class="list-group-item"><strong>rs.<%= camp.price %>/night</strong></li>
            </ul>
            <div class="card-body">
                <a  class="card-link btn btn-info" href="/campground/<%= camp._id %>/edit">edit</a>
                <form class="d-inline" action="/campground/<%= camp._id %>?_method=DELETE"method='POST'>
                    <button class="btn btn-danger">delete</button>
                </form>
            </div>
        </div>
        <form  class="mb-3" action="/campground/<%=camp._id %>/reviews" method="POST">
            <h2>Leave A Review:</h2>
            <div class="mb-3">
                <div class="mb-3">
                    <label class="form-label" for="rating">rating</label>
                    <input class="form-control" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <label class="form-label" for="body">reviews
                </label>
                <textarea class="form-control" name="review[body]" id="body" rows="10" cols="43"></textarea>
            </div>
            <button class="btn btn-success">submit</button>
        </form>
    </div>
</div>

