<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/stylesheets/stars.css">



<div class="row">
<!-- campground show side -->
    <div class="col-6 ">
        
      
        <div class="card" >
            <!-- fucked up the seeds needed to be seeded again -->
            <div id="campCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <% campground.image.forEach((img, i) => { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                      <img class="d-block w-100" src="<%= img.url %>" alt="Slide <%= i + 1 %>">
                    </div>
                  <% }) %>
                </div>
                <% if (campground.image.length > 1) { %>
                <button class="carousel-control-prev" type="button" data-bs-target="#campCarousel" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#campCarousel" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
                <% } %>
              </div>
              <!-- fixed -->            
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= campground.location %></li>
              <li class="list-group-item"><strong>rs.<%= campground.price %>/night</strong></li>
              <li class="list-group-item"><strong>submitted BY:</strong> <%= campground.author.username %></li>
            </ul>


            <!-- needed to be fixed -->
            <% if (currentUser && String(campground.author._id) === String(currentUser._id)) { %>
            <!-- fixed -->

            <div class="card-body">
                <a  class="card-link btn btn-info" href="/campground/<%= campground._id %>/edit">edit</a>
                <form class="d-inline" action="/campground/<%= campground._id %>?_method=DELETE"method='POST'>
                    <button class="btn btn-danger">delete</button>
                </form>
            </div>
            <% } %>
            <%= currentUser && currentUser._id %>
            <%= campground.author %>
        </div>
    </div>

    <!-- review side -->
    <div class="col-6">
      
      <div id="map" style="width: 100%; height: 400px;"></div>

        <% if(currentUser) { %>
        <form  class="mb-3 validated-form " action="/campground/<%=campground._id %>/reviews" method="POST" novalidate>
        <div class="mb-b">
        <fieldset class="starability-basic">
            <legend>leave a review:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="second-rate1" name="review[rating]" value="1" />
            <label for="second-rate1" title="Terrible">1 star</label>
            <input type="radio" id="second-rate2" name="review[rating]" value="2" />
            <label for="second-rate2" title="Not good">2 stars</label>
            <input type="radio" id="second-rate3" name="review[rating]" value="3" />
            <label for="second-rate3" title="Average">3 stars</label>
            <input type="radio" id="second-rate4" name="review[rating]" value="4" />
            <label for="second-rate4" title="Very good">4 stars</label>
            <input type="radio" id="second-rate5" name="review[rating]" value="5" />
            <label for="second-rate5" title="Amazing">5 stars</label>
        </fieldset>
        </div>
            <div class="mb-3">
                <!-- <div class="mb-3">
                    <label class="form-label" for="rating">rating</label>
                    <input class="form-control" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div> -->
                <label class="form-label" for="body">lets talk about it:
                </label>
                <textarea class="form-control" name="review[body]" id="body" rows="10" cols="43" required></textarea>
                <div class="valid-feedback">thanks for the review ! </div>
            </div>
            <button class="btn btn-success">submit</button>
        </form>
        <% } %>


        <% for (let review of campground.reviews) { %>
            <div class="card mb-3 ">

        <div class="card-body">
            <h5 class="card-title">rating : <%= review.rating %>/5</h5>
            <p class="starability-result" data-rating="<%= review.rating %>"></p>
            <% if (review.author) { %>
                <p class="card-subtitle mb-2">Reviewed by: <%= review.author.username %> </p>
              <% } else { %>
                <p class="card-subtitle mb-2 text-danger">Unknown reviewer</p>
              <% } %>
            <p class="card-text"><%= review.body %></p>
            <span>3 days ago</span>
            

            <% if (currentUser && String(review.author._id) === String(currentUser._id)) { %>
            <form action="/campground/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <button class="btn-sm btn btn-danger" type="submit">delete</button>
            </form>
            <% } %>


        </div>
    </div>
        <% } %>
    </div>

</div>

<script>
   const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';

// Get the campground data from your backend
const camp = <%- JSON.stringify(campground) %>;  // Ensure that campground data is passed to the view
const coordinates = camp.geometry.coordinates;  // [longitude, latitude]

// Check if the coordinates are valid
if (coordinates && coordinates.length === 2) {
  // Initialize MapTiler Map
  const map = new maptilersdk.Map({
    container: 'map',  // The ID of the div where the map will be displayed
    style: `https://api.maptiler.com/maps/basic/style.json?key=${maptilerApiKey}`,  // Directly linking the map style
    center: coordinates,  // Set the map's center to the campground's coordinates
    zoom: 10  // Set the zoom level
  });

  // Add a marker at the campground's location
  new maptilersdk.Marker()
    .setLngLat(coordinates)  // Set the marker position
    .setPopup(
      new maptilersdk.Popup({ offset: 25 })
        .setHTML(`<h3>${camp.title}</h3><p>${camp.location}</p>`)  // Popup content
    )
    .addTo(map);  // Add marker to the map
} else {
  console.log('Invalid coordinates for map display');
}
</script>

<script src="../../public/javascripts/showPageMap.js">
   
</script>

        
