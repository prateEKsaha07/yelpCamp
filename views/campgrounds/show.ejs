<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">

<div class="row">
<!-- campground show side -->
    <div class="col-6 ">
        <div class="card" >
            <!-- <img src="<%= camp.image %>" class=" img-fluid card-img-top" alt="..." style=" max-width: 300px;"> -->
            <div class="text-center">
                <img src="<%= camp.image %>" class="img-fluid card-img-top" alt="..." style="width: 100%; max-width: 300px; height: auto;">
              </div>
              
            <div class="card-body">
              <h5 class="card-title"><%= camp.title %></h5>
              <p class="card-text"><%= camp.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= camp.location %></li>
              <li class="list-group-item"><strong>rs.<%= camp.price %>/night</strong></li>
              <li class="list-group-item"><strong>submitted BY:</strong> <%= camp.author.username %></li>
            </ul>


            <!-- needed to be fixed -->
            <% if (currentUser && String(camp.author._id) === String(currentUser._id)) { %>
            <!-- fixed -->

            <div class="card-body">
                <a  class="card-link btn btn-info" href="/campground/<%= camp._id %>/edit">edit</a>
                <form class="d-inline" action="/campground/<%= camp._id %>?_method=DELETE"method='POST'>
                    <button class="btn btn-danger">delete</button>
                </form>
            </div>
            <% } %>
            <%= currentUser && currentUser._id %>
            <%= camp.author %>
        </div>
    </div>

    <!-- review side -->
    <div class="col-6">


        <% if(currentUser) { %>
        <form  class="mb-3 validated-form " action="/campground/<%=camp._id %>/reviews" method="POST" novalidate>
        <div class="mb-b">
        <fieldset class="starability-basic">
            <legend>leave a review:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="second-rate1" name="review[rating]" value="1" />
            <label for="second-rate1" title="Terrible">1 star</label>
            <input type="radio" id="second-rate2" name="review[rating]" value="2" />
            <label for="second-rate2" title="Not good">2 stars</label>
            <input type="radio" id="second-rate3" name="review[rating]" value="3" />
            <label for="second-rate3" title="Average">3 stars</label>
            <input type="radio" id="second-rate4" name="review[rating]" value="4" />
            <label for="second-rate4" title="Very good">4 stars</label>
            <input type="radio" id="second-rate5" name="review[rating]" value="5" />
            <label for="second-rate5" title="Amazing">5 stars</label>
        </fieldset>
        </div>
            <div class="mb-3">
                <!-- <div class="mb-3">
                    <label class="form-label" for="rating">rating</label>
                    <input class="form-control" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div> -->
                <label class="form-label" for="body">lets talk about it:
                </label>
                <textarea class="form-control" name="review[body]" id="body" rows="10" cols="43" required></textarea>
                <div class="valid-feedback">thanks for the review ! </div>
            </div>
            <button class="btn btn-success">submit</button>
        </form>
        <% } %>


        <% for (let review of camp.reviews) { %>
            <div class="card mb-3 ">

        <div class="card-body">
            <h5 class="card-title">rating : <%= review.rating %>/5</h5>
            <p class="starability-result" data-rating="<%= review.rating %>"></p>
            <% if (review.author) { %>
                <p class="card-subtitle mb-2">Reviewed by: <%= review.author.username %> </p>
              <% } else { %>
                <p class="card-subtitle mb-2 text-danger">Unknown reviewer</p>
              <% } %>
            <p class="card-text"><%= review.body %></p>
            <span>3 days ago</span>
            

            <% if (currentUser && String(review.author._id) === String(currentUser._id)) { %>
            <form action="/campground/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <button class="btn-sm btn btn-danger" type="submit">delete</button>
            </form>
            <% } %>


        </div>
    </div>
        <% } %>
    </div>

</div>

