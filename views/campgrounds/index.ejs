<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px;"></div>

    <h1>all campgrounds</h1>
        <% for(let campground of campgrounds) { %>
            <div class="card mb-3" >
                <div class="row">
                    <div class="col-md-4">
                        <!-- <img src="<%= campground.image %> " class=" img-fluid" alt="..."> -->
                        <% if(campground.image.length) {%>
                        <img src="<%= campground.image[0].url %>" class="img-fluid card-img-top" alt="..." style=" max-width: 250px;">
                        <% } else { %>
                        <img src="https://source.unsplash.com/250x250/?camping" class="img-fluid card-img-top" alt="..." style=" max-width: 250px;">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted"><%= campground.location %></small>
                            </p>
                            <a class="btn btn-primary" href="/campground/<%= campground._id %>" ><%=  campground.title %></a>
                        </div>
                    </div>
                </div>
              </div>
        <% } %>
        <a href="/campground/new">add a new camp ground</a>
        <a href="/campground/">all camps</a>
        <a href="/">home!</a>


<script>
    // This is the maptiler API key, replace with your own key
    // wrapping with features because the cluster map is receiving data as array of features
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
    const maptilerApiKey = "<%= maptilerKey %>";
    maptilersdk.config.apiKey = maptilerApiKey;
</script>
<script src="/javascripts/clusterMap.js"></script>